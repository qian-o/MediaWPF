<UserControl x:Class="MediaWPF.Controls.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="UserControlMain"
             Height="50"
             Width="50">
    <Border>
        <Border.RenderTransform>
            <TransformGroup>
                <RotateTransform x:Name="rtfRotate" />
            </TransformGroup>
        </Border.RenderTransform>
        <Border.RenderTransformOrigin>
            <Point X="0.5"
                   Y="0.5" />
        </Border.RenderTransformOrigin>
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation Storyboard.TargetName="rtfRotate"
                                         Storyboard.TargetProperty="Angle"
                                         From="0"
                                         To="360"
                                         Duration="0:0:2"></DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        <Ellipse Height="40"
                 Width="40"
                 StrokeThickness="2"
                 Stroke="{Binding ElementName=UserControlMain,Path=Foreground}"
                 StrokeDashArray="76,76"
                 StrokeDashCap="Round"
                 StrokeDashOffset="252">
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="StrokeDashOffset"
                                             From="252"
                                             To="100"
                                             Duration="0:0:1.5">
                                <DoubleAnimation.EasingFunction>
                                    <SineEase EasingMode="EaseInOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>
    </Border>
</UserControl>
