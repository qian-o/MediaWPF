<UserControl x:Class="MediaWPF.MediaShaderHDR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.CacheMode>
        <BitmapCache RenderAtScale="4"/>
    </UserControl.CacheMode>
    <Grid Background="#000000" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
        <Viewbox>
            <glWpfControl:GLWpfControl x:Name="glMedia" Loaded="GlMedia_Loaded" Render="GlMedia_Render"/>
        </Viewbox>
    </Grid>
</UserControl>
