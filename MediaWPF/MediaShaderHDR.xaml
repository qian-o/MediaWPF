<UserControl x:Class="MediaWPF.MediaShaderHDR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.CacheMode>
        <BitmapCache/>
    </UserControl.CacheMode>
    <Grid Background="#000000">
        <Viewbox>
            <glWpfControl:GLWpfControl x:Name="glMedia" Loaded="GlMedia_Loaded" Render="GlMedia_Render"/>
        </Viewbox>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock HorizontalAlignment="Left" FontSize="20" Foreground="Aquamarine" Text="亮度："/>
            <Slider x:Name="sliBrightness" Width="200" Minimum="0" Maximum="100" ValueChanged="SliBrightness_ValueChanged"/>
            <TextBlock HorizontalAlignment="Left" FontSize="20" Foreground="Aquamarine" Text="对比度："/>
            <Slider x:Name="sliContrast" Width="200" Minimum="0" Maximum="100" ValueChanged="SliContrast_ValueChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
